.page-archive {

  .archive-page-counter {
    position: relative;
    top: 3px;
    left: 20px;

    +mobile() {
      top: 5px;
    }
  }

  .posts-collapse {

    .archive-move-on {
      position: absolute;
      top: 11px;
      left: 0;
      margin-left: -6px;
      width: 10px;
      height: 10px;
      opacity: 1;
      background: $grey;
      border: 1px solid $whitesmoke;

      circle();
    }
  }
}
